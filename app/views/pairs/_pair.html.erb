<% selected_item ||= nil %>
<li class="<%= dom_class pair %>" id="<%= dom_id pair %>">
    <div class="<%= dom_class pair, :item_1 %><%= selected_item == 1 ? " selected" : "" %> option" >
      <%= link_to_remote h(pair.item_1), :url => choose_pair_url(pair, :item => 1) %>
    </div>  
    <div class="<%= dom_class pair, :item_2 %><%= selected_item == 2 ? " selected" : "" %> option">
      <%= link_to_remote h(pair.item_2), :url => choose_pair_url(pair, :item => 2) %>
    </div>
  <div class="stats">
    <p>
    <%= link_to gravatar_for(pair.creator, :size => 32), pair.creator %>
    <span>Taken by 231</span>
    </p>
  </div>
  <div class="clearThis"> </div>
</li>