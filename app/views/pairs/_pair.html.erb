<% selected_item ||= nil %>
<li class="<%= dom_class pair %>" id="<%= dom_id pair %>">
  <div id="<%= dom_id pair, :item_1 %>" class="<%= dom_class pair, :item_1 %><%= selected_item == 1 ? " selected" : "" %> option <%= text_size_class_for_pair_item pair.item_1 %>">
    <%= link_to_remote h(pair.item_1), :url => choose_pair_url(pair, :item => 1), :loading => "$('#{dom_id pair, :item_1}').addClassName('selected');" %>
  </div>
  <div id="<%= dom_id pair, :item_2 %>" class="<%= dom_class pair, :item_2 %><%= selected_item == 2 ? " selected" : "" %> option <%= text_size_class_for_pair_item pair.item_2 %>">
    <%= link_to_remote h(pair.item_2), :url => choose_pair_url(pair, :item => 2), :loading => "$('#{dom_id pair, :item_2}').addClassName('selected');" %>
  </div>
  <div class="stats">
    <p>
      <% if pair.creator %>
        <%= link_to gravatar_for(pair.creator, :size => 32), pair.creator %>
      <% end %>
      <span><%= link_to "Taken by #{pair.choices.count}", pair %></span>
    </p>
  </div>
  <div class="clearLeft"> </div>
</li>